<h1>Listing areas</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.description %></td>
        <td><%= area.identifier %></td>
        <td><%= link_to 'Show', area, :class=>"btn btn-default btn-lg active"  %></td>
        <td><%= link_to 'Edit', edit_area_path(area), :class=>"btn btn-default btn-lg active"  %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-default btn-lg active"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Area', new_area_path, :class=>"btn btn-primary btn-lg active" %>
