<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Permit number</th>
      <th>Expiration date</th>
      <th>Created</th>
      <th>Modified</th>
      <th>Type id</th>
      <th>User id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.permit_number %></td>
        <td><%= document.expiration_date %></td>
        <td><%= document.created %></td>
        <td><%= document.modified %></td>
        <td><%= document.type_ID %></td>
        <td><%= document.user_ID %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

