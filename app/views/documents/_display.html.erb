<div class="row-fluid">
<div class="span6">	
	<h1>Document Details</h1>
	<div class="row-fluid">
		<div class="span4">
	  		<strong>User:</strong>
	  	</div>
	  	<div class="span8">
	  		<%= @document.user.first_name %> <%= @document.user.last_name %>
		</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Document Type:</strong></div>
	  <div class="span8"><%= @document.doc_type.description %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Permit Number:</strong></div>
	  <div class="span8"><%= @document.permit_number %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Expiration Date:</strong></div>
	  <div class="span8"><%= @document.expiration_date %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Creation Date:</strong></div>
	  <div class="span8"><%= @document.created_at %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Last Updated:</strong></div>
	  <div class="span8"><%= @document.updated_at %> </div>
	</div>
	<div class="row-fluid" style="height:40px;">
	  <div class="span4"><strong>Verification Status:</strong></div>
	  <div class="span8">
	  	<% if @document.unverified? %>
	  	<span class="glyphicon glyphicon-info-sign"  style="color:#FFFF66; font-size: 1.8em; vertical-align:middle;"></span>
	  	<% elsif @document.incorrect? || @document.needs_documentation? %>
	  	<span class="glyphicon glyphicon-exclamation-sign"  style="color:red; font-size: 1.8em; vertical-align:middle;"></span>
	  	<% else %>
	  	<span class="glyphicon glyphicon-ok-sign"  style="color:green; font-size: 1.8em; vertical-align:middle;"></span>
	  	<% end %>
	  	
	  	<%= @document.verify.titlecase() %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>File Attachment:</strong></div>
	  <div class="span8">
	  	<div class="span4"><% if @document.document_upload_file_size %>
	  		<%= link_to  @document.document_upload.url do %>
  			<%= image_tag('pdf_icon.png') %><br> <%= @document.document_upload_file_size / 1000 %> KB
  		<% end %>
  		<% end %>
  		</div>
  		<div class="span4">	
			<%= link_to image_tag('print_icon_32.png'), @document.document_upload.url, :onclick => "window.open(this.href,'win2','status=no,toolbar=no,scrollbars=yes,titlebar=no,menubar=no,resizable=yes,width=640,height=480,directories=no,location=no'); return false;" %>
  				
  		</div>
  		<div class="span4">	
  			<%= link_to  @document.document_upload.url do %>
  				<%= image_tag('email_icon_32.jpg') %>
  			<% end %>
  		</div>
	  </div>

	</div>
</div>
</div>
<div class="span6">
	<h2>Preview Your File:</h2>
<IFRAME SRC=<%= @document.document_upload.url %> height="400px" width="500px" align=center FRAMEBORDER="0" SCROLLING="no"></IFRAME>
</div>
</div>  