<p id="notice"><%= notice %></p>

<div class="row-fluid">
<div class="span6">	
	<h1>Document Details</h1>
	<div class="row-fluid">
		<div class="span4">
	  		<strong>User:</strong>
	  	</div>
	  	<div class="span8">
	  		<%= @document.user.email %>
		</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Document Type:</strong></div>
	  <div class="span8"><%= @document.doc_type.description %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Permit Number:</strong></div>
	  <div class="span8"><%= @document.permit_number %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Expiration Date:</strong></div>
	  <div class="span8"><%= @document.expiration_date %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Creation Date:</strong></div>
	  <div class="span8"><%= @document.created_at %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>Last Updated:</strong></div>
	  <div class="span8"><%= @document.updated_at %> </div>
	</div>
	<div class="row-fluid">
	  <div class="span4"><strong>File Attachment:</strong></div>
	  <div class="span8">
	  	<%= link_to  @document.document_upload.url do %>
  			<%= image_tag('pdf_icon.png') %>
  		<% end %>
		</div>
	</div>
</div>
</div>
<div class="span6">
	<h2>Preview Your File:</h2>
<IFRAME SRC=<%= @document.document_upload.url %> height="400px" width="500px" align=center FRAMEBORDER="0" SCROLLING="no"></IFRAME>
</div>
</div>  


<p>&nbsp;</p>
<%= link_to 'Edit', edit_document_path(@document), :class=>"btn btn-primary btn-lg active" %> |
<%= link_to 'Return to All Documents', documents_path, :class=>"btn btn-default btn-lg active"  %>
