<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Permit number</th>
      <th>Expiration date</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr style=height:40px;>
        <td><%= document.name %></td>
        <td><%= document.permit_number %></td>
        <td><%= document.expiration_date %></td>
        <td><%= document.created_at.strftime("%Y-%m-%d") %></td>
        <td class="button"><%= link_to 'Show', document %></td>
        <td class="button"><%= link_to 'Edit', edit_document_path(document) %></td>
        <td class="button"><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

